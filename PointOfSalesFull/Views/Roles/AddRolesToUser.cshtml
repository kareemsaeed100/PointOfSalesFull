
@{
    ViewBag.Title = "AddRolesToUser";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<h3 class="">اضافة صلاحية لمستخدم</h3>

@using (Html.BeginForm("AddRolesToUser", "Roles", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="form-group">
        <label class="col-md-2 control-label">
           اختر المستخدم
        </label>
        <div class="col-md-10">
            @Html.DropDownList("UserId", null, new { @class = "DropDown col-md-12", @placeholder = "User" })
        </div>
        <label class="col-md-2 control-label">
            اختر الصلاحية
        </label>
        <div class="col-md-10">
            @foreach (var item in (SelectList)ViewBag.RoleId)
                {
                <input type="checkbox" name="SelectedRoles"
                       value="@item.Value" class="checkbox-inline" />
                    @Html.Label(item.Text, new { @class = "control-label" })
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="اضافة" />
        </div>
    </div>
}




