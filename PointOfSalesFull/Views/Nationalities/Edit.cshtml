@model PointOfSalesFull.Models.Nationality

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<h2 align="center" class="panel-title ">
    <strong style="text-align:center;color:red;font:bolder">تعديل جنسية</strong>
</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Nat_ID)

        <div class="form-group">
            <label class="control-label col-md-2">
                اسم الجنسية عربى
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nat_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nat_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                اسم الجنسية انجليزى
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nat_EName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nat_EName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("الرجوع الى القائمة", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
