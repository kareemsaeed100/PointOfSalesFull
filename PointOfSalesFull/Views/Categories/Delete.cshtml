@model PointOfSalesFull.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<h2>حذف فئة</h2>

<h3>هل انت متأكد من الحذف؟</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-2">
                اسم القسم
            </label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.department.Deb_Name)
        </dd>

        <dt>
            <label class="control-label col-md-2">
                اسم الفئة عربى
            </label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cat_Descrption)
        </dd>

        <dt>
            <label class="control-label col-md-2">
                اسم الفئة انجليزى
            </label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cat_EDescrption)
